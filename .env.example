# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=opentranscribe

# MinIO Configuration (Object Storage)
MINIO_HOST=minio
MINIO_PORT=9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET_NAME=opentranscribe

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# OpenSearch Configuration
OPENSEARCH_HOST=opensearch
OPENSEARCH_PORT=9200

# JWT Authentication
JWT_SECRET_KEY=change_this_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# Model Configuration
MODEL_BASE_DIR=/app/models
TEMP_DIR=/app/temp
USE_GPU=true

# AI Models
WHISPER_MODEL=large-v2
PYANNOTE_MODEL=pyannote/speaker-diarization
LLM_MODEL=mistral-7b-instruct-v0.2.Q4_K_M

# HuggingFace API Key - required for some models
# Get yours at https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Frontend Configuration
NODE_ENV=development

# API Configuration
VITE_API_BASE_URL=http://localhost:8080/api
VITE_WS_BASE_URL=ws://localhost:8080/ws

# Flower Configuration
VITE_FLOWER_PORT=5555
VITE_FLOWER_URL_PREFIX=flower
# Optional: FLOWER_BASIC_AUTH=username:password
